<odoo>
    <template id="webonwork" name="Web On Work">
        <t t-call="web.layout">
            <title>Web On Work</title>
            <h2>Sale Order List</h2>
            <ul>
                <t t-foreach="sale_orders" t-as="sales">
                    <li>
                        Sale Order <a t-attf-href="/webwork_des/{{slug(sales)}}">
                        <t t-esc="sales.name"/>
                    </a>
                    </li>
                </t>
            </ul>
        </t>
    </template>


        <template id="webwork_discus" name='Discuss Web On Work'>
            <t t-call="web.layout">
                <title>Work Web</title>


                <h2>Sale Order</h2>

                <ul>
                    <t t-foreach="courses" t-as="works">
                        <li>
                            <strong>Sale Order No:</strong>
                            <t t-esc="works.name"/>
                        </li>
                        <li>
                            <strong>Customer Name:</strong>
                            <t t-esc="works.partner_id.name"/>
                        </li>
                        <li>
                            <strong>Quotation Date:</strong>
                            <t t-esc="works.date_order"/>
                        </li>
                        <li>
                            <strong>Payment Term:</strong>
                            <t t-esc="works.payment_term_id.name"/>
                        </li>
                    </t>
                </ul>
                  <div class="center-div">

                <h2>Products</h2>

                    <table class="custom-table">
                        <thead>
                            <tr>
                                <th>Image</th>
                                <th>Name</th>
                                <th>Qty</th>
                                <th>Unit Price</th>
                                <th>Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-if="courses.order_line">
                                <tr t-foreach="courses.order_line" t-as="line">
                                    <td>
                                        <div style="display: table; width: 100%; height: 100%;">
                                            <div style="display: table-cell; vertical-align: middle; text-align: center;">
                                                <t t-if="line.product_id.image_1920">
                                                    <img t-att-src="image_data_uri(line.product_id.image_1920)"
                                                         style="max-width: 60px; max-height: 60px; object-fit: contain;"/>
                                                </t>
                                                <t t-if="not line.product_id.image_1920">
                                                    <span style="font-size: 32px; font-weight: bold;">Image</span>
                                                </t>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <t t-esc="line.product_id.name"/>
                                    </td>
                                    <td>
                                        <t t-esc="int(line.product_uom_qty or 0)"/>
                                    </td>
                                    <td>
                                        <t t-esc="int(line.price_unit or 0)"/>
                                    </td>
                                    <td>
                                        <t t-esc="int(line.price_subtotal or 0)"/>
                                    </td>
                                </tr>
                            </t>
                            <t t-else="">
                                <tr>
                                    <td colspan="5" style="text-align: center; font-weight: bold;">Products are not
                                        added in this Sale Order
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>

                <style>
                    .center-div {
                    margin: 0 auto;
                    max-width: 900px;
                    padding: 20px;
                    text-align: center;
                    }
                    .custom-table {
                    width: 100%;
                    border-collapse: collapse;
                    text-align: center;
                    margin-top: 20px;
                    }
                    .custom-table th, .custom-table td {
                    border: 1px solid black;
                    padding: 8px;
                    }
                    .custom-table thead {
                    background-color: #f2f2f2;
                    }
                </style>
            </t>
        </template>



</odoo>
